# Brick Rush - Environment Variables Example
# Copy this file to .env.local and configure as needed

# Application Environment
VITE_APP_ENV=development

# Game Configuration
VITE_GAME_DEBUG_MODE=false
VITE_GAME_ENABLE_CHEATS=false

# API Configuration (for future features)
# VITE_API_URL=https://api.brickrush.example.com
# VITE_API_KEY=your_api_key_here

# Analytics (for future implementation)
# VITE_ANALYTICS_ID=
# VITE_ANALYTICS_ENABLED=false

# Feature Flags
VITE_ENABLE_SOUND=true
VITE_ENABLE_MUSIC=true
VITE_ENABLE_PARTICLES=true

# Leaderboard (for future implementation)
# VITE_LEADERBOARD_ENABLED=false
# VITE_LEADERBOARD_API_URL=

# PWA Configuration
VITE_PWA_ENABLED=false

# Performance
VITE_MAX_FPS=60
VITE_ENABLE_PERFORMANCE_MONITORING=false

# Note: All Vite environment variables must be prefixed with VITE_
# to be exposed to the client-side code
